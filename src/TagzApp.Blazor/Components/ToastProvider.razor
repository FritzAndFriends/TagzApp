@using TagzApp.Blazor.Services
@inject ToastService ToastService
@implements IDisposable
@rendermode InteractiveAuto

<div class="toast-container position-fixed top-0 end-0 p-3">
    @foreach (var message in ToastService.Messages)
    {
        <Toast Message="@message"/>
    }
</div>

@code {

    protected override void OnInitialized()
    {
        base.OnInitialized();

        ToastService.OnUpdate += Update;
    }

    private void Update()
    {
        Console.WriteLine($"Updated Toast Count: {ToastService.Messages.Count}");
        InvokeAsync(StateHasChanged);
    }
    
    public void Dispose()
    {
        ToastService.OnUpdate -= StateHasChanged;
    }
}