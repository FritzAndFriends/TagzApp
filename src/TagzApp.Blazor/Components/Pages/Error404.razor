@page "/Error/404"

<PageTitle>Page Not Found</PageTitle>

<div class="text-center mt-5">
    <h1 class="display-4 text-danger mt-4">404 - Page Not Found</h1>
    <img src="Tagzapp_full.webp" alt="TagzApp" style="max-width: 300px;" />
    <p class="lead">Sorry, the page you're looking for doesn't exist.</p>
    <div class="mt-4">
        <p class="text-muted">The page may have been moved, deleted, or you may have mistyped the URL.</p>
    </div>
    <p class="mt-4">
        <a href="/" class="btn btn-primary">Return to Home</a>
        <a href="/Waterfall" class="btn btn-outline-secondary ms-2">View Waterfall</a>
        <a href="javascript:history.back()" class="btn btn-outline-secondary ms-2">Go Back</a>
    </p>
</div>