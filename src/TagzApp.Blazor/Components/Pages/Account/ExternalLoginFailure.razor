@page "/Account/ExternalLoginFailure"

<PageTitle>Login Error</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger">
                <h4><i class="bi bi-exclamation-triangle-fill me-2"></i>Authentication Error</h4>
                <p>There was an error authenticating with <strong>@Provider</strong>.</p>
                
                @if (!string.IsNullOrEmpty(Error))
                {
                    <details class="mt-3">
                        <summary>Error Details</summary>
                        <div class="mt-2 p-3 bg-dark text-white rounded border">
                            <code class="text-warning">@Error</code>
                        </div>
                    </details>
                }
                
                <div class="mt-3">
                    <p>Please try again or contact your administrator if the problem persists.</p>
                    <a href="/Account/Login" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    private string Provider { get; set; } = "Unknown";
    
    [SupplyParameterFromQuery]
    private string Error { get; set; } = string.Empty;
}