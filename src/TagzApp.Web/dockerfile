# docker build -t web -f TagzApp.Web/dockerfile .

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ./src .
RUN dotnet restore "./TagzApp.Web/TagzApp.Web.csproj"
RUN dotnet build "./TagzApp.Web/TagzApp.Web.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "./TagzApp.Web/TagzApp.Web.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TagzApp.Web.dll"]
